    <HBox fx:id="header" alignment="CENTER_LEFT" prefHeight="74.0" prefWidth="1200.0">
        <Button fx:id="backBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false" prefHeight="40.0" prefWidth="120.0" text="Out room" />
