        <Label fx:id="titleLabel" alignment="CENTER" prefHeight="74.0" text="Auction Room">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
        <Region HBox.hgrow="ALWAYS" />
    </HBox>
    <HBox prefHeight="100.0" prefWidth="200.0">
        <children>
         <Region prefHeight="100.0" prefWidth="232.0" />
            <Label prefHeight="100.0" prefWidth="125.0" text="Next item: ">
            <font>
               <Font size="21.0" />
            </font></Label>
         <Label prefHeight="100.0" prefWidth="125.0">
            <font>
               <Font size="21.0" />
            </font>
         </Label>
         <Region prefHeight="100.0" prefWidth="232.0" />
         <Label prefHeight="100.0" prefWidth="125.0" text="Time Left:">
            <font>
               <Font size="21.0" />
            </font>
         </Label>
         <Label fx:id="countdownLabel" prefHeight="100.0" prefWidth="125.0">
                <font>
                    <Font size="21.0" />
                </font>
            </Label>
        </children>
    </HBox>
    <fx:include fx:id="itemTableView" maxHeight="576.0" minHeight="576.0" prefHeight="576.0" source="../item/item_table_view.fxml" />
</VBox>
