<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox fx:id="createItemScreen" prefHeight="800.0" prefWidth="1200.0"
    xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
    fx:controller="com.networking.auction.controller.item.CreateItemFormController">
    <HBox fx:id="header" prefHeight="74.0" prefWidth="1200.0">
        <Button fx:id="backBtn" alignment="CENTER" contentDisplay="CENTER" mnemonicParsing="false"
            prefHeight="40.0" prefWidth="72.0" text="Back" />
        <Label fx:id="titleLabel" alignment="CENTER" prefHeight="74.0" prefWidth="209.0"
            text="Create Item">
            <font>
                <Font size="20.0" />
            </font>
        </Label>
    </HBox>
    <GridPane fx:id="form" alignment="CENTER" hgap="10" vgap="20" prefHeight="726.0"
        prefWidth="1200.0">
        <Label prefWidth="82.0" text="Name *:" GridPane.rowIndex="0" />
        <TextField fx:id="nameField" GridPane.columnIndex="1" GridPane.rowIndex="0" />

        <Label text="Buy Now Price:" GridPane.rowIndex="1" />
        <TextField fx:id="buyNowPriceField" GridPane.columnIndex="1" GridPane.rowIndex="1" />

        <Label text="Date:" GridPane.columnIndex="0" GridPane.rowIndex="2" />
        <DatePicker fx:id="datePicker" prefWidth="200.0" GridPane.columnIndex="1"
            GridPane.rowIndex="2" />

        <Label text="Time slot:" GridPane.columnIndex="0" GridPane.rowIndex="3" />
        <ComboBox fx:id="timeSlotBox" prefWidth="200.0" GridPane.columnIndex="1"
            GridPane.rowIndex="3" />

        <Button fx:id="createRoomBtn" text="Create Room" GridPane.columnIndex="1"
            GridPane.rowIndex="4" />
    </GridPane>
</VBox>